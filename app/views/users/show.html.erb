<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
       </tbody>
      </table>

      <div class="row">

        <%= link_to "", edit_user_path(@user), class:"btn btn-outline-secondary btn-block" %>
      </div>


      <h2>New Book</h2>
      <!-- form_with部分 -->
      <%= form_with model: @book, local:true do |f| %>
        <div>Title</div>
        <%= f.text_field :title %>
        <div>Opinion</div>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
         <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
           </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
             <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40'%></td>
             <td><%= link_to book.title, book_path(book.id) %></td>
  		       <td><%= book.body %></td>
  		      </tr>
          </tbody>
          <% end %>
         </table>
      </div>
</div>
</div>