<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
        <label for="inputImage">ProfileImage</label>



      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
       </tbody>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_54872" href="/users/54872/edit">aaa<i class="fas fa-user-cog"></i></a>
      </div>


      <h2>New Book</h2>
      <!-- form_with部分 -->
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>

      </div>

      <div class="col-md-8 offset-md-1">
  		 <h2>Book detail</h2>
  		  <table class="table">
  		    <tbody>
  		      <tr>
  		        <td><%= @book.title %></td>
  		        <td><%= @book.body %></td>
  		        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
  		      </tr>
  		    </tbody>
  		  </table>
      </div>
  </div>
</div>